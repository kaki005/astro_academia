---
import "flowbite";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import ProfilePictures from "@/assets/profile_pictures.jpg";
import CvTimeline from "../../components/ui/CvTimeline.astro";
import SocialIcons from "../../components/ui/SocialIcons.astro";
import PublicationItem from "../../components/ui/PublicationItem.astro";
import AwardItem from "../../components/ui/AwardItem.astro";
import EducaionItem from "../../components/ui/EducationItem.astro";
import ExperienceItem from "../../components/ui/ExperienceItem.astro";
import { locales, getMessages, getTranslations } from "../../i18n";
import { _getStaticPaths, GetIntroduction } from "../../i18n";
import { List, ListItem } from "@/components/ui/list";
const { locale } = Astro.params;
const messages = getMessages(locale);
const Introduction = GetIntroduction(locale);
import { experiences, education, publications, AWARDS } from "../../data/cv";
export const getStaticPaths = _getStaticPaths; // 必須
---

<Layout locale={locale}>
	<!-- Hero Section -->
	<section class="mb-12">
		<h1 class="text-4xl font-bold mb-6 border-b pb-2">
			<i class="fa-solid fa-user"></i>{messages.common.introduction}
		</h1>
		<Introduction />
		<h2 class="text-2xl mt-2">
			{messages.common.links}
		</h2>
		<SocialIcons class="w-52" />
	</section>

	{
		education.length > 0 && (
			<section class="mb-12">
				<h1 class="text-4xl font-bold mb-6 border-b pb-2">
					<i class="fa-solid fa-graduation-cap" />
					{messages.common.education}
				</h1>

				<CvTimeline
					elements={education}
					locale={locale}
					ChildItem={EducaionItem}
				/>
			</section>
		)
	}

	{
		experiences.length > 0 && (
			<section class="mb-12">
				<h1 class="text-4xl font-bold mb-6 border-b pb-2">
					<i class="fa-solid fa-briefcase" />
					{messages.common.experiences}
				</h1>
				<CvTimeline
					elements={experiences}
					locale={locale}
					ChildItem={ExperienceItem}
				/>
			</section>
		)
	}

	{
		publications.length > 0 && (
			<section class="mb-12">
				<h1 class="text-4xl font-bold mb-6 border-b pb-2">
					<i class="fa-regular fa-file-lines" />
					{messages.common.publications}
				</h1>
				<List>
					{publications.map((item) => (
						<PublicationItem item={item} locale={locale} />
					))}
				</List>
			</section>
		)
	}
	{
		AWARDS.length > 0 && (
			<section class="mb-12">
				<h1 class="text-4xl font-bold mb-6 border-b pb-2">
					<i class="fa-regular fa-file-lines" />
					{messages.common.awards}
				</h1>
				<List>
					{AWARDS.map((item) => (
						<AwardItem item={item} locale={locale} />
					))}
				</List>
			</section>
		)
	}
</Layout>
