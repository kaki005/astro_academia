---
import type { Person } from "@/types/person";
interface Props {
    isEnglish: boolean;
    person: Person;
    isAppendComma: boolean;
}
const { isEnglish, person, isAppendComma } = Astro.props;
const NAME = isEnglish ? person.EnglishName : person.JapanName;
---

{
    person.IsMe ? (
        <text class="font-medium underline">{NAME}</text>
    ) : (
        <text>{NAME}</text>
    )
}
{isAppendComma && <text>, </text>}
