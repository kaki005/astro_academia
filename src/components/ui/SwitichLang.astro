---
import { locales, getMessages, getTranslations } from "../../i18n";
type Props = {
    locale?: string;
};
const { locale } = Astro.props;
const { class: className } = Astro.props;
const pathname = Astro.url.pathname; // "/en/blog"
var segment = pathname.split("/").filter(Boolean).at(-1);
for (const v of locales) {
    if (segment == v) {
        segment = "";
        break;
    }
}
