---
import type { Award } from "@/types/cv";
interface Props {
    item: Award;
    locale?: string;
}
import { locales, getMessages, getTranslations } from "../../i18n";
import { ListItem } from "@/components/ui/list";
import TimeDisplay from "../ui/TimeDisplay.astro";
const { item, locale } = Astro.props;
const messages = getMessages(locale);
---

<ListItem class="flex items-center">
    <TimeDisplay time={item.Day} locale={locale} /><a href={item.Link}
        >{messages.Award[item.ID]}</a
    >
</ListItem>
